{
  "compilerOptions": {
    "target": "ES6",                   // JavaScript version to compile to
    "module": "CommonJS",              // Module system
    "rootDir": "./src",                // Source code folder
    "outDir": "./dist",                // Compiled JavaScript output folder
    "esModuleInterop": true,           // Better compatibility with ES modules
    "strict": true,                    // Enable strict type checking
    "resolveJsonModule": true,         // Allow importing JSON files
    "skipLibCheck": true               // Skip library declaration checks
  },
  "include": ["src"],                  // Include only 'src' folder
  "exclude": ["node_modules"]          // Exclude 'node_modules'
}